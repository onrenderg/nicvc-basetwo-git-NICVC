<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NICVC.ReserveNicDashboardPage" 
             x:Name="title_reservepage"
             BackgroundImageSource="back1.jpg"
              xmlns:sys="clr-namespace:System;assembly=mscorlib"
              xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls" 
              ios:Page.UseSafeArea="true" Title="Reserve" IconImageSource="ic_reservevideo">
    <NavigationPage.TitleView>
        <StackLayout x:Name="Custom_Navigation" Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
            <Image Source="ic_launcher.png" HeightRequest="40" VerticalOptions="CenterAndExpand"/>
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="0">
                <Label x:Name="Lbl_Header1" Text="NIC Video Conferencing" Style="{StaticResource NavigationLabelColor}" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </StackLayout>
        </StackLayout>
    </NavigationPage.TitleView>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Frame Grid.Row="0" CornerRadius="20" BorderColor="Navy" HorizontalOptions="FillAndExpand" Margin="5" BackgroundColor="AliceBlue">               
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">    
                <Label x:Name="Lbl_UserDetails" BackgroundColor="Transparent" TextColor="Navy" FontSize="16" FontAttributes="Bold" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
            </StackLayout>            
        </Frame>
        
        <Frame Grid.Row="1" CornerRadius="20" BorderColor="Navy" HorizontalOptions="FillAndExpand" Margin="5" BackgroundColor="AliceBlue">
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Label x:Name="Lbl_Header" BackgroundColor="Transparent" TextColor="Navy" FontSize="16" FontAttributes="Bold" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
                <!--<Image Source="ic_refresh.png"  Aspect="AspectFit" HeightRequest="50" HorizontalOptions="End"/>-->
            </StackLayout>
        </Frame>
      
        <Grid Grid.Row="2" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="lbl_fromdate" Text="Select Date" TextColor="Navy" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" FontAttributes="Bold" Grid.Row="1" Grid.Column="0" FontSize="16"/>
            <DatePicker FontSize="16" FontAttributes="Bold" Format="dd-MM-yyyy" x:Name="DatePicker_startdate" HorizontalOptions="FillAndExpand" MinimumDate="{x:Static sys:DateTime.Now}" IsEnabled="True" DateSelected="DatePicker_startdate_DateSelected" Grid.Row="1" Grid.Column="1"/>
        </Grid>
        
        <ScrollView Grid.Row="3">
            <Grid Margin="15,0,15,0" VerticalOptions="StartAndExpand">
                <StackLayout>
                    <Grid RowSpacing="5" ColumnSpacing="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Frame CornerRadius="20" BorderColor="Navy" Grid.Row="0" Grid.Column="0" BackgroundColor="AliceBlue" VerticalOptions="StartAndExpand" Margin="5">
                            <StackLayout x:Name="TodayVcLayout" Spacing="5" Padding="10" VerticalOptions="CenterAndExpand">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="multistate_Tapped" NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image Source="ic_multipointstate" HeightRequest="50" HorizontalOptions="Center"/>
                                <Label x:Name="Lbl_multipointbystate" Text="Multipoint Managed By State" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="12" FontAttributes="Bold" TextColor="Navy" HorizontalOptions="Center" LineBreakMode="WordWrap"/>
                            </StackLayout>
                        </Frame>

                        <Frame CornerRadius="20" BorderColor="Navy" Grid.Row="0" Grid.Column="1" BackgroundColor="#f2f2ff" VerticalOptions="StartAndExpand" Margin="5">
                            <StackLayout Spacing="5" Padding="10" VerticalOptions="CenterAndExpand">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="multinichq_Tapped" NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image Source="ic_multipointnic" HeightRequest="50" HorizontalOptions="Center"/>
                                <Label x:Name="Lbl_multipointbynic" Text="Multipoint Managed By NIC" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="12" FontAttributes="Bold" TextColor="Navy" HorizontalOptions="Center" LineBreakMode="WordWrap"/>
                            </StackLayout>
                        </Frame>

                        <Frame CornerRadius="20" BorderColor="Navy" Grid.Row="1" Grid.Column="0" BackgroundColor="GhostWhite" VerticalOptions="StartAndExpand" Margin="5">
                            <StackLayout Spacing="5" Padding="10" VerticalOptions="CenterAndExpand">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="pointopoint_Tapped" NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image Source="ic_ptpicon.png" HeightRequest="50" HorizontalOptions="Center"/>
                                <Label x:Name="Lbl_pointopoint" Text="Point To Point" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="12" FontAttributes="Bold" TextColor="Navy" HorizontalOptions="Center" LineBreakMode="WordWrap"/>
                            </StackLayout>
                        </Frame>

                        <Frame CornerRadius="20" BorderColor="Navy" Grid.Row="1" Grid.Column="1" BackgroundColor="#fff2fe" VerticalOptions="StartAndExpand" Margin="5">
                            <StackLayout Spacing="5" Padding="10" VerticalOptions="CenterAndExpand">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="cicvc_Tapped" NumberOfTapsRequired="1"/>
                                </StackLayout.GestureRecognizers>
                                <Image Source="ic_cicicon.png" HeightRequest="50" HorizontalOptions="Center"/>
                                <Label x:Name="Lbl_cic" Text="CIC" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="12" FontAttributes="Bold" TextColor="Navy" HorizontalOptions="Center" LineBreakMode="WordWrap"/>
                            </StackLayout>
                        </Frame>
                    </Grid>

                    <StackLayout Margin="0,10,0,0">
                        <Frame CornerRadius="20" BorderColor="Navy" BackgroundColor="AliceBlue" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" x:Name="lbl_ongoingconferences" Text="Ongoing Conference" Padding="10" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="18" FontAttributes="Bold" TextColor="Navy"/>
                                <Image Grid.Column="1" Source="ic_live1.png" HeightRequest="30" Margin="10,0,10,0" VerticalOptions="Center"/>
                            </Grid>
                        </Frame>

                        <Grid RowSpacing="5" ColumnSpacing="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Frame CornerRadius="20" BorderColor="Navy" Grid.Row="0" Grid.Column="0" BackgroundColor="AliceBlue" VerticalOptions="StartAndExpand" Margin="5">
                                <StackLayout Spacing="5" Padding="12" VerticalOptions="CenterAndExpand">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ongoingvc_Tapped" NumberOfTapsRequired="1"/>
                                    </StackLayout.GestureRecognizers>
                                    <Label x:Name="Lbl_Ongoing" Text="Ongoing - 2" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="12" FontAttributes="Bold" TextColor="Navy" LineBreakMode="WordWrap"/>
                                </StackLayout>
                            </Frame>
                            
                            <Frame CornerRadius="20" BorderColor="Navy" Grid.Row="0" Grid.Column="1" BackgroundColor="#f2fffb" VerticalOptions="StartAndExpand" Margin="5">
                                <StackLayout Spacing="5" Padding="12" VerticalOptions="CenterAndExpand">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="importantvc_Tapped" NumberOfTapsRequired="1"/>
                                    </StackLayout.GestureRecognizers>
                                    <Label x:Name="Lbl_Important" Text="Important Vc's - 0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="12" FontAttributes="Bold" TextColor="Navy" LineBreakMode="WordWrap"/>
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </StackLayout>
                </StackLayout>
            </Grid>
        </ScrollView>

        <ContentView x:Name="Loading_activity" BackgroundColor="#C0808080" Padding="20, 20" IsVisible="false" Grid.RowSpan="999">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Frame BackgroundColor="White" HorizontalOptions="Center" VerticalOptions="Center" Padding="20" CornerRadius="10">
                    <StackLayout Orientation="Horizontal" Spacing="15" HorizontalOptions="Center" VerticalOptions="Center">
                        <ActivityIndicator IsVisible="true" IsRunning="true" Color="Navy"/>
                        <Label x:Name="Lbl_PleaseWait" Text="Please Wait ..." TextColor="Black" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ContentView>
    </Grid>

</ContentPage>
